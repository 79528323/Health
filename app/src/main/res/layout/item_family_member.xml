<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clicker"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginVertical="@dimen/common_margin_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:background="@mipmap/icon_member_pressure"/>

        <TextView
            android:id="@+id/name"
            tools:text="心率"
            android:layout_marginStart="@dimen/common_margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/global_333333"
            android:textSize="@dimen/txt_normal_14"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginVertical="@dimen/common_margin_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:baselineAligned="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/value"
            tools:text="心率"
            android:layout_marginStart="@dimen/common_margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/global_333333"
            android:textSize="@dimen/txt_normal_14"/>


        <TextView
            android:id="@+id/unit"
            tools:text="单位"
            android:layout_marginStart="@dimen/common_margin_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/global_333333"
            android:textSize="@dimen/txt_normal_14"/>

    </LinearLayout>

</FrameLayout>