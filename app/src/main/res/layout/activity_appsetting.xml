<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="@dimen/common_margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_pws_setting"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:visibility="gone"
                android:paddingLeft="@dimen/common_margin_12"
                android:paddingRight="@dimen/common_margin_12">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_general_level_bg" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="密码设置"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/sp_16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:visibility="gone"
                android:layout_marginStart="@dimen/common_margin_12"
                android:layout_marginEnd="@dimen/common_margin_12"
                android:background="#e9e9e9"/>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_third_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:paddingLeft="@dimen/common_margin_12"
                android:paddingRight="@dimen/common_margin_12">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_general_level_bg" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="第三方登录账号管理"
                    android:textColor="@color/text_color_1"
                    android:textSize="@dimen/sp_16" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="@dimen/common_margin_12"
                android:layout_marginEnd="@dimen/common_margin_12"
                android:background="#e9e9e9"/>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_message"
                style="@style/re_userinfo">

                <ImageView
                    android:id="@+id/img_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_general_switch_pressed" />


                <TextView
                    style="@style/tv_userinfo_key"
                    android:text="接受消息推送" />
            </RelativeLayout>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_new_band"
            style="@style/re_userinfo">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_general_level_bg" />


            <TextView
                style="@style/tv_userinfo_key"
                android:text="关于体安" />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/version_update"
            style="@style/re_userinfo"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_general_level_bg" />


            <TextView
                style="@style/tv_userinfo_key"
                android:text="版本更新" />


            <TextView
                android:id="@+id/tv_name"
                style="@style/tv_userinfo_value"
                android:ellipsize="end"
                android:maxLength="12"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:text="更新版本" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e9e9e9"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_clear"
            style="@style/re_userinfo">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_general_level_bg" />

            <TextView
                android:id="@+id/tv_clear"
                style="@style/tv_userinfo_value"
                android:ellipsize="end"
                android:maxLength="12"
                android:maxLines="1"
                tools:text="77M" />

            <TextView
                style="@style/tv_userinfo_key"
                android:text="清除缓存" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e9e9e9"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_loginoff_lay"
            style="@style/re_userinfo"
            android:gravity="center"
            android:layout_marginTop="@dimen/common_margin_10"
            android:visibility="visible">


            <TextView
                android:id="@+id/rl_logoff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLength="12"
                android:maxLines="1"
                android:text="注销账号"
                android:textColor="#202020"
                android:textSize="18sp" />


        </RelativeLayout>


