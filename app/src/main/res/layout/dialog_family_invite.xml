<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layer_white_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/invite_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/global_333333"
            android:textSize="@dimen/txt_middle_16"
            android:padding="@dimen/common_margin_10"
            android:text="邀请新成员"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="@dimen/common_margin_10"
            android:background="#EEEEEE"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/new_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/global_333333"
                android:textSize="@dimen/txt_middle_16"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/common_margin_20"
                android:text="有新邀请"/>

            <TextView
                android:id="@+id/bage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_alignRight="@id/new_invite"
                android:layout_alignTop="@id/new_invite"
                android:layout_marginTop="-15dp"
                android:layout_marginEnd="-20dp"
                tools:visibility="visible"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/shape_bage"/>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>