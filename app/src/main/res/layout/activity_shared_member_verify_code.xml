<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="22dp"
        android:text="发送成功！\n请输入对方收到的验证码"
        android:textColor="#ff333333"
        android:textSize="18sp" />

    <com.gzhealthy.health.widget.VerificationCodeView
        android:id="@+id/vcvCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="22dp"
        android:text="*验证码有效期60秒，过期后需要重新邀请，请尽快联系对方获取验证码"
        android:textColor="#ff999999"
        android:textSize="12sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btSend"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/selector_enabled_shared_member_verify_code"
        android:enabled="false"
        android:textColor="@color/color_enabled_999999_00d0b9"
        android:textSize="16sp"
        tools:text="重新发送（60s）" />

    <Button
        android:id="@+id/btOk"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/shape_00d0b9_36"
        android:text="确定"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</LinearLayout>