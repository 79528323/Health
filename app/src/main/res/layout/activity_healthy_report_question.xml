<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/healthy_report_question_bg" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="170dp"
                android:layout_marginBottom="14dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_mine_white"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.gzhealthy.health.widget.ReportQuestionProgressView
                        android:id="@+id/reportQuestionProgressView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/que_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="44"
                            android:textColor="@color/global_333333"
                            android:textSize="@dimen/txt_normal_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="."
                            android:textColor="@color/global_333333"
                            android:textSize="18sp" />


                        <TextView
                            android:id="@+id/que_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/global_333333"
                            android:textSize="@dimen/txt_middle_16"
                            android:textStyle="bold"
                            tools:text="你胃部有问题吗你胃部有问题吗你胃部有问题吗你胃部有问题吗你胃部有问题吗" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/option_linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_margin_30"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/previous"
                            android:layout_width="125dp"
                            android:layout_height="@dimen/common_margin_40"
                            android:layout_marginEnd="@dimen/common_margin_20"
                            android:background="@drawable/btn_report_last"
                            android:gravity="center"
                            android:text="上一题"
                            android:textColor="@color/global_333333"
                            android:textSize="@dimen/txt_normal_14"
                            android:visibility="invisible" />

                        <LinearLayout
                            android:id="@+id/report_select_question"
                            android:layout_width="125dp"
                            android:layout_height="@dimen/common_margin_40"
                            android:layout_marginStart="@dimen/common_margin_20"
                            android:background="@drawable/btn_report_que"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/icon_report_menu" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/common_margin_50"
                                android:layout_marginStart="@dimen/common_margin_5"
                                android:gravity="center"
                                android:text="选择题目"
                                android:textColor="#4087fb"
                                android:textSize="@dimen/txt_normal_14" />


                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linear_generate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="23dp"
                            android:background="#eeeeee" />

                        <TextView
                            android:id="@+id/report_generate"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:layout_marginTop="@dimen/common_margin_20"
                            android:background="@drawable/shape_report_generate"
                            android:gravity="center"
                            android:text="查看体质分析"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="本问卷依据中华中医药协会标准"
                    android:textColor="@color/global_999999"
                    android:textSize="@dimen/sp_12" />


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@mipmap/icon_white_back" />
    </RelativeLayout>


</LinearLayout>
