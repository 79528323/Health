<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginHorizontal="14dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/shape_white_8"
    android:gravity="center_vertical"
    android:paddingHorizontal="14dp">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="42dp"
        android:layout_height="42dp"
        tools:src="@mipmap/my_card_package_logo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff333333"
            android:textSize="16sp"
            tools:text="视频医生激活码" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#ff999999"
            android:textSize="12sp"
            tools:text="有效期至：2022–12-30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="10dp"
            android:layout_height="6dp"
            android:background="@drawable/shape_my_car_semicircle_bottom" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="2dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="@drawable/line_eeeeee_vertical_dotted" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="10dp"
            android:layout_height="6dp"
            android:background="@drawable/shape_my_car_semicircle_top" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff5b68ea"
            android:textSize="16sp"
            tools:text="JFK23G" />

        <TextView
            android:id="@+id/tvCopy"
            android:layout_width="44dp"
            android:layout_height="20dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_e6e2ff_36"
            android:gravity="center"
            android:text="复制"
            android:textColor="#ff5b68ea"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>