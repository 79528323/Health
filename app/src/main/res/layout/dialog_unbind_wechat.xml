<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_unbind_wechat"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/common_margin_30"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_middle_16"
            android:textColor="@color/global_333333"
            android:textStyle="bold"
            android:text="解绑微信"/>

        <LinearLayout
            android:layout_marginTop="@dimen/common_margin_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/global_333333"
                android:gravity="center"
                android:text="解绑微信账号后，你将无法使用该微信登录体安账户"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_30"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cancel"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_middle_16"
                    android:textColor="#00c2b4"
                    android:layout_marginEnd="@dimen/common_margin_10"
                    android:gravity="center"
                    android:background="@drawable/btn_unbind_watch_cancel"
                    android:text="取消"/>

                <TextView
                    android:id="@+id/confirm"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_middle_16"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/common_margin_10"
                    android:gravity="center"
                    android:background="@drawable/btn_unbind_watch_confirm"
                    android:text="确定解绑"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>