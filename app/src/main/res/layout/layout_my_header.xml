<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_margin_60"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/common_margin_30"
        android:layout_height="@dimen/common_margin_30"
        android:layout_toLeftOf="@id/desc"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/common_margin_5"
        android:background="@drawable/icon_gif_loading"/>

    <TextView
        android:id="@+id/desc"
        android:layout_centerInParent="true"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/txt_normal_14"
        android:textColor="@color/global_666666"
        android:text=""/>
</RelativeLayout>