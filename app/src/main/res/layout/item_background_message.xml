    <LinearLayout
        android:layout_toRightOf="@id/img_watch"
        android:paddingTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rect_radius"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="7dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/red_no_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_circle_noread"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你的手表发出sos求助"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/common_margin_5"
                android:typeface="monospace"
                android:textColor="@color/global_333333"
                android:textSize="@dimen/txt_middle_16"/>

        </LinearLayout>

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="设备ID："
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="@dimen/common_margin_5"
            android:textColor="@color/global_333333"
            android:textSize="13sp"/>



        <View
            android:layout_marginTop="@dimen/common_margin_18"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#EEEEEE"/>


        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="今天 14：33"
            android:textColor="@color/global_999999"
            android:textSize="13sp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:paddingStart="@dimen/common_margin_25"
            android:paddingEnd="@dimen/common_margin_18"
            android:drawableRight="@mipmap/icon_mine_arrow"/>

    </LinearLayout>


</LinearLayout>