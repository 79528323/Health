<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/global_bg_list"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_highschool"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="高中"
            android:textColor="@color/global_333333" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#eeeeee"></View>

        <TextView
            android:id="@+id/tv_special_education"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="专科"
            android:textColor="@color/global_333333" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#eeeeee"></View>

        <TextView
            android:id="@+id/tv_college"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="本科"
            android:textColor="@color/global_333333" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#eeeeee"></View>

        <TextView
            android:id="@+id/tv_master"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="硕士"
            android:textColor="@color/global_333333" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#eeeeee"></View>

        <TextView
            android:id="@+id/tv_doctor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="博士"
            android:textColor="@color/global_333333" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#eeeeee"></View>

        <TextView
            android:id="@+id/tv_others"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="其他"
            android:textColor="@color/global_333333" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/global_eeeeee"></View>

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/global_999999" />
    </LinearLayout>

</LinearLayout>
