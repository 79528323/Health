<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <View
        android:id="@+id/vBatteryGroup"
        android:layout_width="16dp"
        android:layout_height="10dp"
        android:background="@drawable/shape_battery_view_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vBatterySize"
        android:layout_width="1dp"
        android:layout_height="5dp"
        android:layout_marginLeft="3dp"
        android:background="#000000"
        android:maxWidth="10dp"
        android:minWidth="0dp"
        app:layout_constraintBottom_toBottomOf="@id/vBatteryGroup"
        app:layout_constraintLeft_toLeftOf="@id/vBatteryGroup"
        app:layout_constraintTop_toTopOf="@id/vBatteryGroup" />

    <View
        android:id="@+id/vBatteryMouth"
        android:layout_width="1dp"
        android:layout_height="3dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="@id/vBatteryGroup"
        app:layout_constraintLeft_toRightOf="@id/vBatteryGroup"
        app:layout_constraintTop_toTopOf="@id/vBatteryGroup" />

    <TextView
        android:id="@+id/tvBatterySize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/vBatteryMouth"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="18%" />

</androidx.constraintlayout.widget.ConstraintLayout>