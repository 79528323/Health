<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/global_bg_list"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_no_marrayed"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="未婚"
            android:textColor="@color/global_333333" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#eeeeee">

        </View>

        <TextView
            android:id="@+id/tv_marrayed"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="已婚"
            android:textColor="@color/global_333333" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/global_eeeeee"></View>

        <TextView
            android:id="@+id/tv_mother"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="未知"
            android:textColor="@color/global_333333"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:background="@color/global_eeeeee"></View>

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/global_999999" />
    </LinearLayout>

</LinearLayout>
