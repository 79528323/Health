<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:openxu="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <com.gzhealthy.health.widget.CircleImageView
        android:id="@+id/user_icon"
        android:layout_width="@dimen/common_margin_50"
        android:layout_height="@dimen/common_margin_50"
        android:src="@mipmap/ic_details_map_bg"
        openxu:border_color="@android:color/white"
        openxu:border_width="2dp" />


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/global_333333"
            android:textSize="16sp"
            android:singleLine="true"
            tools:text="体安健康档案dddddddddddddd" />


        <TextView
            android:id="@+id/uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/global_999999"
            android:textSize="14sp"
            android:singleLine="true"
            tools:text="设备：焕能舱" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/status"
            android:layout_gravity="center_vertical|end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            tools:text="接受" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/refused"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/bg_family_invited_resued"
                android:paddingStart="@dimen/dp_12"
                android:paddingEnd="@dimen/dp_10"
                android:textSize="13sp"
                android:text="拒绝" />

            <TextView
                android:id="@+id/accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_12"
                android:background="@drawable/bg_family_invited_accept"
                android:textSize="13sp"
                android:text="接受" />
        </LinearLayout>


    </FrameLayout>
</LinearLayout>