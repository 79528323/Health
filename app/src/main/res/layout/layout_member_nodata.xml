<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/clicker"
    android:paddingVertical="@dimen/common_margin_30"
    android:orientation="vertical">

    <TextView
        android:drawableTop="@mipmap/icon_no_data"
        android:text="该成员对你关闭所有健康数据\n如需查看，请联系再次开启"
        android:gravity="center_horizontal"
        android:textSize="@dimen/txt_normal_14"
        android:textColor="@color/global_999999"
        android:drawablePadding="@dimen/common_margin_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/refresh"
        android:text="刷新"
        android:gravity="center_horizontal"
        android:textSize="@dimen/txt_normal_14"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/common_margin_20"
        android:background="@drawable/btn_commit"
        android:paddingHorizontal="@dimen/common_margin_25"
        android:paddingVertical="@dimen/common_margin_6"
        android:drawablePadding="@dimen/common_margin_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>