<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:gravity="center_vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_margin_50"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="分享到"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/global_333333"
                android:textSize="@dimen/sp_16" />


            <ImageView
                android:id="@+id/tv_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_dialog_close"
                android:layout_gravity="end"
                android:layout_margin="@dimen/common_margin_10"
                android:padding="@dimen/common_margin_10"/>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_10"
            android:layout_marginBottom="@dimen/common_margin_50"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_share_wechat"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="微信好友"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/global_666666" />

            <TextView
                android:id="@+id/tv_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_share_wechat_friend"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="朋友圈"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/global_666666" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>