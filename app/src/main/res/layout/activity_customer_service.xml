<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:textColor="#ff333333"
        android:textSize="16sp"
        tools:text="客服热线：400-54950343" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textColor="#ff999999"
        android:textSize="12sp"
        tools:text="（工作时间：8:00-20:00）" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp">

        <TextView
            android:id="@+id/tvWeiXin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_customer_service_wx"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:textColor="#ff00c9b4"
            android:textSize="12sp"
            tools:text="微信号：fdfrw0093" />

        <TextView
            android:id="@+id/tvCopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_customer_service_copy"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="复制"
            android:textColor="#ffffffff"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivCode"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="26dp"
        tools:src="@color/default_background" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="26dp"
            android:layout_height="1dp"
            android:background="#FF999999" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:text="长按保存二维码"
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <View
            android:layout_width="26dp"
            android:layout_height="1dp"
            android:background="#FF999999" />
    </LinearLayout>


    <Button
        android:id="@+id/btCall"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/shape_00d0b9_36"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:text="拨号400-45934437" />

</LinearLayout>
