<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/common_margin_5"
        android:background="@drawable/bg_rect_sleep_pop">

        <ImageView
            android:id="@+id/sleep_shape"
            android:layout_width="@dimen/common_margin_5"
            tools:background="#7A62D1"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin_5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sleep_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#7A62D1"
                    tools:text="深睡"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_12" />


                <TextView
                    android:id="@+id/sleep_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/global_333333"
                    tools:text="3小时20分"
                    android:layout_marginStart="@dimen/common_margin_5"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_5"
                android:layout_marginBottom="@dimen/common_margin_10">

                <TextView
                    android:id="@+id/sleep_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/global_666666"
                    tools:text="11-05 9:32"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>