<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_unbind_watch"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_middle_16"
            android:gravity="center"
            android:textColor="@color/global_333333"
            android:text="确定要解绑设备吗"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_middle_16"
                android:textColor="#00c2b4"
                android:layout_marginEnd="@dimen/common_margin_10"
                android:gravity="center"
                android:background="@drawable/btn_unbind_watch_cancel"
                android:text="取消"/>

            <TextView
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_middle_16"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/common_margin_10"
                android:gravity="center"
                android:background="@drawable/btn_unbind_watch_confirm"
                android:text="确定"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>