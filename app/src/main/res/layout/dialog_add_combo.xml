<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lv_sss"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/button_write"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="添加套餐"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="套餐名称"
            android:textColor="#666666"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/et_combo_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入套餐名称"
            android:textColor="#202020"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <View
        style="@style/div_style"
        android:layout_marginLeft="82dp">

    </View>

    <LinearLayout
        android:id="@+id/lv_start_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="销售日期"
            android:textColor="#666666"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入销售开始时间"
            android:textColor="#202020"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <View
        style="@style/div_style"
        android:layout_marginLeft="82dp">

    </View>

    <LinearLayout
        android:id="@+id/lv_end_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="至"
            android:textColor="#666666"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入销售结束时间"
            android:textColor="#202020"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <View
        style="@style/div_style"
        android:layout_marginLeft="82dp">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="销售状态"
            android:textColor="#666666"
            android:textSize="@dimen/sp_16" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/ck_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:button="@drawable/ck_style"
            android:checked="true"
            android:gravity="center_vertical"
            android:text="  下架"
            android:textColor="#202020"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <View
        style="@style/div_style"
        android:layout_marginLeft="82dp">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="提前预定时间"
            android:textColor="#666666"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/tv_prebook_time"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入提前预定时间"
            android:inputType="number"
            android:textColor="#202020"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="天"
            android:textColor="#202020"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <View
        style="@style/div_style"
        android:layout_marginLeft="82dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="截止预订时间"
            android:textColor="#666666"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_endbook_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请选择截止预订时间"
            android:textColor="#202020"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <View style="@style/div_style"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#202020"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cccccc"></View>

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="#202020"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>