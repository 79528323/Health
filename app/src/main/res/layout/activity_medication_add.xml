<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/default_background"
    android:orientation="vertical">


    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="#FFEEEEEE" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="54dp"
                    android:paddingHorizontal="14dp">

                    <View
                        android:layout_width="3dp"
                        android:layout_height="13dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="21dp"
                        android:layout_marginLeft="8dp"
                        android:text="用药时间"
                        android:textColor="#ff333333"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:background="#FFEEEEEE" />

                <LinearLayout
                    android:id="@+id/llStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:minHeight="54dp"
                    android:paddingHorizontal="14dp">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="21dp"
                        android:text="开始时间"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvStartTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="请选择"
                        android:textColor="#ff333333"
                        android:textColorHint="#ff999999"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@mipmap/ic_general_level_bg" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="14dp"
                    android:background="#FFEEEEEE" />

                <LinearLayout
                    android:id="@+id/llEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:minHeight="54dp"
                    android:paddingHorizontal="14dp">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="21dp"
                        android:text="结束时间"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvEndTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="结束时间或持续使用时间"
                        android:textColor="#ff333333"
                        android:textColorHint="#ff999999"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@mipmap/ic_general_level_bg" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:layout_marginVertical="10dp"
                android:text="*如不确定用药时长或长期持续用药，则无需选择用药结束时间"
                android:textColor="#ff999999"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="54dp"
                    android:paddingHorizontal="14dp">

                    <View
                        android:layout_width="3dp"
                        android:layout_height="13dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="21dp"
                        android:layout_marginLeft="8dp"
                        android:text="用药详情"
                        android:textColor="#ff333333"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:background="#FFEEEEEE" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="54dp"
                    android:paddingHorizontal="14dp">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="21dp"
                        android:text="药品名称"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="请输入药品名称"
                        android:paddingVertical="4dp"
                        android:textColor="#ff333333"
                        android:textColorHint="#ff999999"
                        android:textSize="15sp" />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="14dp"
                    android:background="#FFEEEEEE" />

                <LinearLayout
                    android:id="@+id/llFrequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:minHeight="54dp"
                    android:paddingHorizontal="14dp">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="21dp"
                        android:text="用药频次"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvFrequency"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="请选择"
                        android:textColor="#ff333333"
                        android:textColorHint="#ff999999"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@mipmap/ic_general_level_bg" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="14dp"
                    android:background="#FFEEEEEE" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="54dp"
                    android:paddingHorizontal="14dp">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="21dp"
                        android:text="每次剂量"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/etDose"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="请输入剂量数值"
                        android:inputType="numberDecimal"
                        android:paddingVertical="4dp"
                        android:textColor="#ff333333"
                        android:textColorHint="#ff999999"
                        android:textSize="15sp" />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="14dp"
                    android:background="#FFEEEEEE" />

                <LinearLayout
                    android:id="@+id/llUnit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:minHeight="54dp"
                    android:paddingHorizontal="14dp">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="21dp"
                        android:text="剂量单位"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvUnit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="请选择"
                        android:textColor="#ff333333"
                        android:textColorHint="#ff999999"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@mipmap/ic_general_level_bg" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_white_8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="54dp"
                    android:paddingHorizontal="14dp">

                    <View
                        android:layout_width="3dp"
                        android:layout_height="13dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="21dp"
                        android:layout_marginLeft="8dp"
                        android:text="药物不良反应"
                        android:textColor="#ff333333"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:background="#FFEEEEEE" />

                <LinearLayout
                    android:id="@+id/llBad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:minHeight="54dp"
                    android:paddingHorizontal="14dp">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="21dp"
                        android:text="不良反应"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvBad"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:hint="请选择"
                        android:text="无"
                        android:textColor="#ff333333"
                        android:textColorHint="#ff999999"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@mipmap/ic_general_level_bg" />
                </LinearLayout>


                <EditText
                    android:id="@+id/etBad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginBottom="14dp"
                    android:background="@drawable/shape_f6f6f6_6"
                    android:gravity="left"
                    android:hint="请输入不良反应"
                    android:minLines="2"
                    android:padding="12dp"
                    android:textColor="#ff333333"
                    android:textColorHint="#ff999999"
                    android:textSize="15sp"
                    android:visibility="gone" />

            </LinearLayout>


            <TextView
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_margin_50"
                android:layout_marginTop="12dp"
                android:text="删除该记录"
                android:gravity="center"
                android:visibility="gone"
                tools:visibility="visible"
                android:background="@drawable/bg_rect_radius"
                android:textColor="#ff00d0b9"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <View
        android:id="@+id/vBottom"
        android:layout_width="1dp"
        android:layout_height="0dp" />
</LinearLayout>