<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="15dp"
    android:paddingTop="@dimen/common_margin_18"
    android:paddingEnd="15dp"
    android:paddingBottom="@dimen/common_margin_18"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/btn_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_controller"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_icon_healcard"/>


        <TextView
            android:id="@+id/name"
            tools:text="血压"
            android:layout_toRightOf="@id/btn_controller"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/common_margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/global_333333"
            android:textSize="@dimen/sp_14"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/menu"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_heal_card_menu"/>

</RelativeLayout>