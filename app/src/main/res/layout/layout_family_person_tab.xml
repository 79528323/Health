<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="85dp"
    android:layout_height="@dimen/dp_120"
    android:id="@+id/container"
    xmlns:openxu="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:background="@color/default_background"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/user_icon_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_margin_1"
        android:layout_marginTop="@dimen/common_margin_10"
        android:background="@drawable/member_img_bg">

        <com.gzhealthy.health.widget.CircleImageView
            android:id="@+id/user_icon"
            android:layout_width="@dimen/common_margin_50"
            android:layout_height="@dimen/common_margin_50"
            android:src="@mipmap/ic_details_map_bg"
            openxu:border_color="@color/default_background"
            openxu:border_width="2dp" />


    </FrameLayout>

    <TextView
        android:id="@+id/family_tab_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        tools:text="12312313"
        android:layout_marginHorizontal="@dimen/common_margin_10"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/common_margin_10"
        android:textColor="@color/global_333333"/>


</LinearLayout>