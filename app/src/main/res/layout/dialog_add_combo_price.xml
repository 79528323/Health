<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lv_sss"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/button_write2"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="批量添加价格"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="销售价"
            android:textColor="#666666"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/vt_price"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入价格"
            android:inputType="number"
            android:maxLength="4"
            android:text=""
            android:textColor="@color/color_FF3F12"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="元/天"
            android:textColor="#666666"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <View
        style="@style/div_style"
        android:layout_marginLeft="120dp">

    </View>

    <LinearLayout
        android:id="@+id/lv_start_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="批量日期范围"
            android:textColor="#666666"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入销售开始时间"
            android:textColor="#202020"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <View
        style="@style/div_style"
        android:layout_marginLeft="120dp">

    </View>

    <LinearLayout
        android:id="@+id/lv_end_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="                    至"
            android:textColor="#666666"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入销售结束时间"
            android:textColor="#202020"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <View
        style="@style/div_style"
        android:layout_marginLeft="120dp"
        android:visibility="gone"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="提前预定天数"
            android:textColor="#666666"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/tv_prebook_date"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入天数"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#202020"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="天"
            android:textColor="#202020"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <View
        style="@style/div_style"
        android:layout_marginLeft="120dp"
        android:visibility="gone"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="截止预订时间"
            android:textColor="#666666"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_endbook_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入截止预订时间"
            android:singleLine="true"
            android:textColor="#202020"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <View style="@style/div_style"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_size_50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#202020"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cccccc"></View>

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="#202020"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>