<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rect_radius"
    android:id="@+id/clicker"
    android:layout_marginStart="@dimen/common_margin_10"
    android:layout_marginEnd="@dimen/common_margin_10"
    android:orientation="vertical">

<!--    <ImageView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentEnd="true"-->
<!--        android:background="@mipmap/icon_week_flag"/>-->

    <LinearLayout
        android:id="@+id/tv_item_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/common_margin_10"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="17dp"
                android:layout_marginBottom="@dimen/common_margin_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_score"
                    android:text="0"
                    android:layout_marginStart="@dimen/common_margin_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_btn_parimary"
                    android:textSize="30sp"/>

                <TextView
                    android:text="健康评分"
                    android:layout_marginStart="@dimen/common_margin_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/global_333333"
                    android:textSize="@dimen/sp_12"/>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/common_margin_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date"
                android:text="健康评分"
                android:layout_marginStart="@dimen/common_margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/global_999999"
                android:layout_marginEnd="@dimen/common_margin_10"
                android:textSize="@dimen/sp_12"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/common_margin_10"
                android:background="@mipmap/icon_right"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:background="@mipmap/icon_healthy_report_flag">


        <TextView
            android:text="周报"
            android:layout_marginStart="@dimen/common_margin_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="10sp"/>


    </LinearLayout>


