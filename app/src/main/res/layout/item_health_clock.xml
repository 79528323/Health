<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_margin_40"
        android:orientation="vertical">


        <TextView
            android:id="@+id/time_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_normal_14"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/global_333333"
            android:text="子时 23:00-1:00"/>


        <TextView
            android:id="@+id/time_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="此刻"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:padding="@dimen/common_margin_2"
            android:textSize="10sp"
            android:visibility="gone"
            android:background="@drawable/bg_health_clock_radius"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#EEEEEE"/>
</LinearLayout>